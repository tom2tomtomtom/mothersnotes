{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist/main",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": ["main/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules"]
}
