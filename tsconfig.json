{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "shared/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "out/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "main"
  ]
}
